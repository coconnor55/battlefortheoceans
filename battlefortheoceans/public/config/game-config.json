{
  "version": "1.4",
  "game_name": "Battleship",
  "system_messages": {
    "turn": "Turn {turn}: {player}'s turn",
    "game_start": "{era} begins! {players}",
    "game_end": "Game Over! {winner} wins after {turns} turns!",
    "error": "An error occurred: {message}",
    "system": "System: {message}",
    "initializing": "Initializing game...",
    "preparing": "Preparing game...",
    "game_starting": "Game starting..."
  },
  "referral_email": 1,
  "referral_signup": 10,
  "defense_modifiers": {
    "Carrier": 1.0,
    "Battleship": 0.67,
    "Cruiser": 1.0,
    "Submarine": 0.5,
    "Destroyer": 1.0,
    "PT-Boat": 1.5
  },
  "size_categories": {
    "small": [1, 2],
    "medium": [3],
    "large": [4, 5]
  },
  "reveal_thresholds": {
    "size_hint_hits": 2,
    "critical_health_percent": 0.5
  },
  "ship_silhouettes": {
    "path_template": "ships/{class}/{index}.svg",
    "comment": "Ship cells indexed 0 to n-1, where 0=stern, n-1=bow. Path is relative to assets/eras/{era}/",
    "fallback": "ships/default/{index}.svg"
  },
  "animations": {
    "shot_animation": 500,
    "result_animation": 300,
    "sound_delay": 200,
    "speed_factor": 1.0,
    "game_over_delay": 6000
  },
  "videos": {
    "new_achievement": "assets/videos/new-achievement.mp4",
    "generic_fallbacks": {
        "sunkplayer": "assets/eras/traditional/videos/playersunk.mp4",
        "sunkopponent": "assets/eras/traditional/videos/opponentsunk.mp4",
        "victory": "assets/eras/traditional/videos/victory.mp4",
        "defeat": "assets/eras/traditional/videos/defeat.mp4"
    }
  },
  "inactivity": {
    "warning_timeout": 60000,
    "logout_timeout": 30000,
    "enabled": true
  },
  "purchase": false,
  "debug": {
    "reveal_ships_key": "z",
    "show_ai_thinking": false,
    "log_combat_rolls": false
  }
}
